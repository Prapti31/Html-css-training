<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">

        <div>
            <form class="form" method="post" action="/addUser">
                Name: <input type="text" class="form-control" name="uname" id="uname" >
                <br>
                Email: <input type="text" class="form-control" name="email" id="email" >
                <br>
                Password: <input type="password" class="form-control" name="password" id="password">
                <br>
                City: <input type="text" class="form-control" name="city" id="city">
                <br>
                <button class="btn-outline-success" onclick="myfunction()">Register</button>
            </form>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="Name">Name</th>
                        <th scope="Email">Email</th>
                        <th scope="Email">Password</th>
                        <th scope="City">City</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i < udata.length;i++){%>
                        <tr>
                            <td><%=udata[i].uname %></td>
                            <td><%=udata[i].email %></td>
                            <td><%=udata[i].password %></td>
                            <td><%=udata[i].city %></td>
                        </tr>
                    <%}%>
                    
                </tbody>
            </table>
            
        </div>
        <script>
            function myfunction(){
                var data=document.getElementById('name').value
                var data1=document.getElementById('email').value
                var data2=document.getElementById('city').value
                if(data==null || data==''){
                    alert("Name is empty")
                    flag=1;
                    event.preventDefault()
                }
                if(data1==null || data1==''){
                    alert("Email is empty")
                    flag=1;
                    event.preventDefault()
                }
                if(data2==null || data2==''){
                    alert("City is empty")
                    flag=1;
                    event.preventDefault()
                }
            }
        </script>
       
</body>
</html>